<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice]%>
  </div>
<%end%>
<h1>Listing Tasks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Done</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td>
          <% img = task.done ? 'v.png' : 'x.png' %>
          <%= image_tag img, :alt => "Status", :width => "24px", :height => "24px" %>
        </td>
        <td><%= task.date %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info"%></td>
        <td><%= link_to 'Destroy', task, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-success" %>
